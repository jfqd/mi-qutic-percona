#
# qutic Percona configuration, based on my-large.cnf
#

# The following options will be passed to all MySQL clients
[client]
port = 3306
socket = /tmp/mysql.sock
default-character-set = utf8
#ssl
#ssl-ca = /var/mysql/certs/ca.pem
#ssl-verify-server-cert

[mysqld_safe]
socket = /tmp/mysql.sock
open_files_limit = 10240
character-set-server = utf8
collation-server = utf8_general_ci

# The MySQL server
[mysqld]
user = mysql
port = 3306
basedir = /opt/local
datadir = /var/mysql
socket = /tmp/mysql.sock
bind-address = 127.0.0.1
skip-external-locking
log_warnings
skip_host_cache
skip_name_resolve

skip-character-set-client-handshake
init-connect = 'SET collation_connection = utf8_general_ci; SET NAMES utf8;'
character-set-server = utf8
collation-server = utf8_general_ci

# MyISAM settings
key_buffer_size = 32M
sort_buffer_size = 8M
read_buffer_size = 2M
read_rnd_buffer_size = 16M
bulk_insert_buffer_size = 64M
myisam_sort_buffer_size = 128M
myisam_max_sort_file_size = 10G
myisam_repair_threads = 1
myisam_recover_options

# InnoDB settings
default-storage-engine = innodb
innodb_data_home_dir = /var/mysql
innodb_log_group_home_dir = /var/mysql
innodb_data_file_path = ibdata1:100M:autoextend
innodb_buffer_pool_size = 16M
innodb_log_file_size = 400M
innodb_log_buffer_size = 8M
innodb_flush_log_at_trx_commit = 1
innodb_file_per_table = 1
innodb_doublewrite = 0
innodb_io_capacity = 1500
innodb_read_io_threads = 8
innodb_write_io_threads = 8
innodb_max_dirty_pages_pct = 90
innodb_lock_wait_timeout = 120
innodb_large_prefix = 1
innodb_file_format = barracuda
innodb_file_format_max = barracuda

# Slow query log settings
# The default logs all full table scans,tmp tables,filesorts on disk queries
#use_global_long_query_time = 1
long_query_time = 0.5
#slow_query_log_file = /var/log/mysql/slowquery.log
#slow_query_log = 1
#log_slow_filter = "full_scan,tmp_table_on_disk,filesort_on_disk"
#log_slow_verbosity = "full"

# Other general MySQL settings
table_open_cache = 768
thread_cache_size = 1000
query_cache_size = 64M
query_cache_strip_comments
query_cache_type = 1
query_cache_limit = 2M
back_log = 64
thread_concurrency = 32 
tmpdir = /var/tmp
max_connections = 1000
max_connect_errors = 10
max_allowed_packet = 16M
binlog_cache_size = 1M
# max_join_size = 4294967295
net_buffer_length = 2K
thread_stack = 256K
tmp_table_size = 128M
max_heap_table_size = 128M
join_buffer_size = 8M
transaction_isolation = REPEATABLE-READ

# Replication settings (master to slave, master to master)
# This is not enabled by default.  There are more steps
# to this besides uncommenting the lines below.
#
server-id = 1

binlog_format = row
log-bin = mysql-bin
log-bin-index = mysql-bin.index
log-error = /var/log/mysql/error.log
log_warnings = 1

relay_log = mysql-relay-bin
relay_log_index = mysql-relay-bin.index
replicate-same-server-id = 0
sync_binlog = 1
expire_logs_days = 10
max_binlog_size = 100M
#auto-increment-increment = 1
#auto-increment-offset = 2

#report-host = percona
#relay_log_purge = 1
#slave-skip-errors = 1062
#binlog-ignore-db = mysql

# Handlersocket settings
# See: https://github.com/ahiguti/HandlerSocket-Plugin-for-MySQL
#
# The port number to bind to (for read requests)
#loose_handlersocket_port = 9998
# The port number to bind to (for write requests)
#loose_handlersocket_port_wr = 9999
# The number of worker threads (for read requests)
#loose_handlersocket_threads = 16
# The number of worker threads (for write requests)
#loose_handlersocket_threads_wr = 1
# To allow handlersocket accept many concurrent
# connections, make open_files_limit as large as
# possible.
open_files_limit = 10240

# https://dev.mysql.com/doc/refman/8.0/en/using-encrypted-connections.html
ssl=1
ssl-ca=/etc/ssl/certs/ca-certificates.crt
ssl-cert=/var/mysql/certs/crt.pem
ssl-key=/var/mysql/certs/key.pem
# ssl-cipher=DHE-RSA-AES256-SHA
# require_secure_transport=ON

[mysqldump]
quick
max_allowed_packet = 16M

[mysql]
no-auto-rehash
# Remove the next comment character if you are not familiar with SQL
#safe-updates

[myisamchk]
key_buffer_size = 512M
sort_buffer_size = 512M
read_buffer = 8M
write_buffer = 8M

[mysqlhotcopy]
interactive-timeout
